            <channel id="power_state" typeId="power_state"/>
            <channel id="power_state_light" typeId="power_state_light"/>
            <channel id="standby_state" typeId="standby_state"/>
            <channel id="brightness_state" typeId="brightness_state"/>
            <channel id="color_state" typeId="color_state"/>
            <channel id="target_temperature_state" typeId="target_temperature_state"/>
            <channel id="power_consumption_state" typeId="power_consumption_state"/>
            <channel id="motion_state" typeId="motion_state"/>
            <channel id="illumination_state" typeId="illumination_state"/>
            <channel id="presence_state" typeId="presence_state"/>
            <channel id="temperature_state" typeId="temperature_state"/>
        </channels>


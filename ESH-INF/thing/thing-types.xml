    <!-- Switch Channel -->
    <channel-type id="power_state">
        <item-type>Switch</item-type>
        <label>Power State</label>
        <description>Switch the power state of a unit.</description>
        <category>Light</category>
    </channel-type>
    <channel-type id="power_state_light">
        <item-type>Switch</item-type>
        <label>Light Power State</label>
        <description>Switch the power state of all lights in a location.</description>
        <category>Light</category>
    </channel-type>
    <channel-type id="standby_state">
        <item-type>Switch</item-type>
        <label>Standby State</label>
        <description>Switch the standby state of a unit.</description>
    </channel-type>
    <channel-type id="brightness_state">
        <item-type>Dimmer</item-type>
        <label>Brightness State</label>
        <description>Set the brightness state of a unit.</description>
    </channel-type>
    <channel-type id="color_state">
        <item-type>Color</item-type>
        <label>Color State</label>
        <description>Set the color state of a unit.</description>
    </channel-type>
    <channel-type id="target_temperature_state">
        <item-type>Number</item-type>
        <label>Target Temperature State</label>
        <description>Set the target temperature of a unit.</description>
    </channel-type>

    <channel-type id="power_consumption_state">
        <item-type>Number</item-type>
        <label>Power Consumption State</label>
        <description>Get the power consumption of a unit.</description>
        <state readOnly="true"></state>
    </channel-type>
    <channel-type id="motion_state">
        <item-type>Number</item-type>
        <label>Motion State</label>
        <description>Get the detected motion of a unit.</description>
        <state readOnly="true"></state>
    </channel-type>
    <channel-type id="illumination_state">
        <item-type>Number</item-type>
        <label>Illumination State</label>
        <description>Get the illumination measured by a unit.</description>
        <state readOnly="true"></state>
    </channel-type>
    <channel-type id="presence_state">
        <item-type>Number</item-type>
        <label>Presence State</label>
        <description>Get the presence detected by a unit.</description>
        <state readOnly="true"></state>
    </channel-type>
    <channel-type id="temperature_state">
        <item-type>Number</item-type>
        <label>Presence State</label>
        <description>Get the temperature measured by a unit.</description>
        <state readOnly="true"></state>
    </channel-type>

</thing:thing-descriptions>
